*
	box-sizing border-box

global-reset()

html
	height 100%
	width 100%

body
	font-family font-family-standard
	font-size font-size-standard
	color text-grey
	height 100%
	width 100%
	margin 0
	padding 0

for h in (1..6)
	h{h}
		line-height 1.5em
		font-size lookup('font-size-h' + h)
		letter-spacing -1px
		font-weight 600
		
::selection
	color #fff
	background-color lighten(primary-color, 30%)

a
	color color-primary
	text-decoration none
	cursor pointer
	&:hover
		color darken(color-primary, 10%)

p
	line-height 1.6rem

b
	font-weight 900

small
	font-size .86rem

strong
	font-weight 700
